@model blogEngine.DataAccess.BlogPost


<div>

<table cellspacing="10" style="border-collapse: separate;
    border-spacing: 15px;">
     <tr>
         <th>Id</th>
         <th>Title</th>
         <th>Author</th>
         <th>Content</th>
         <th>Created at</th>
         <th></th>
         <th></th>
      
     </tr> 
     <tr>
        <td> @Model.Id</td>
        <td> @Model.Title </td>
        <td> @Model.Author</td>
        <td> @Model.Content</td>
        <td> @Model.CreatedAt</td>
        <td><a asp-action="Edit"> Edit </a></td>
        <td><a asp-action="Delete" asp-route-id="@Model.Id"> Delete </a></td>
  
    </tr>
</table>

</div>
<!-- COMMENTS FORM -->
<div>
    <h1>Comments</h1>
    
    <form asp-controller="Blog" asp-action="CreateComment">

    <label asp-for="Author">Author</label>
    <input asp-for="Author" type="text" name="Author" value="" >

    <label asp-for="Content">Content</label>
    <textarea asp-for="Content" name="Content" value="NULL"> </textarea>
    
    <input type="hidden" asp-for="Id" name="id" value="@Model.Id">

    <input type="submit" value="Submit">

    </form>
</div>
